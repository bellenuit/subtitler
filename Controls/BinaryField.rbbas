#tag ClassProtected Class BinaryFieldInherits TextArea	#tag Method, Flags = &h0		Function Hexformat(v as integer, s as string) As string		  return right(s + hex(v), len(s))		End Function	#tag EndMethod	#tag Method, Flags = &h0		Sub SetBinary(s as string)		  dim m,m2 as memoryBlock		  dim sz,offset,lb as integer		  dim r,c as integer		  dim lines(-1),line, linehex as string		  dim v as integer		  sz = lenb(s)		  m = newmemoryBlock(sz)		  m.stringValue(0,sz) = s		  		  m2 = newmemoryBlock(sz*(16*2 + 16 + 10))		  		  stepsize = 16		  		  for r = 0 to sz-1 step 16		    linehex = ""		    line = ""		    for c = r to r+stepsize-1		      if c<sz then		        v = m.byte(c)		        linehex = linehex + hexformat(v,"00")		        if c mod 2 <> 0 then linehex = linehex + " "		        if v > 31 and v<127 then		          line = line + chr(v)		        else		          line = line + "."		        end		      end		    next		    		    line = hexformat(r,"000000") + " " + linehex + " " + line		    		    line = line.defineEncoding(encodings.ascii)		    		    lines.append line		    		    lb = lenb(line)		    m2.stringValue(offset,lb) = line		    offset = offset + lb		    lb = lenb(endofLine)		    m2.stringValue(offset,lb) = endofLine		    offset = offset + lb		    		    if r  mod 160 = 0 then		      progress r / sz * 80		    end		  next		  		  text = m2.stringValue(0,offset)		  'text =  join(lines,endofLine)		  		  progress 100		  		End Sub	#tag EndMethod	#tag Method, Flags = &h0		Sub SetText(s as string)		  dim s2 as string		  s2 = s		  s2 = s2.convertEncoding(encodings.utf8)		  s2 = replaceall(s2,chr(9),"âž")		  text = s2		End Sub	#tag EndMethod	#tag Hook, Flags = &h0		Event Progress(n as integer)	#tag EndHook	#tag Property, Flags = &h0		stepsize As integer	#tag EndProperty	#tag ViewBehavior		#tag ViewProperty			Name="AcceptTabs"			Visible=true			Group="Behavior"			Type="Boolean"			InheritedFrom